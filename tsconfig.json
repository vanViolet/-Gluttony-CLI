{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs":true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,

  },
  "include": [
    "src/**/*"
  ]
}
